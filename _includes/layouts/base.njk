<!DOCTYPE html>
<html lang="en">
<head>

{% include "inspector-splash.njk" %}

<!--------->
<!-- metadata -->
<!--------->

  <!-- dump site data to DOM -->
  <script>
    window.siteData = {{ site | dump | safe }};
  </script>

  <!-- index -->
  {# add variable to nunjucks templates that shouldn't be indexed in frontmatter #}
  {% if noIndex %}
    <meta name="ROBOTS" content="NOINDEX, NOFOLLOW">
  {% endif %}

  <link rel="canonical" href="{{ page.url | canonicalUrl }}">

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>{{ site.title }}{% if subtitle %}: {{ subtitle }}{% endif %}</title>

  <meta name="description" content="{% if subdescription %}{{ subdescription }}{% else %}{{ site.description }}{% endif %}">
  <meta name="author" content="{{ site.author }}">
  <meta name="keywords" content="{{ keywords }}">

  {# if applicable/desired (default: TB green) #}
  <meta name="theme-color" content="{{ site.accentColor | default('#0A8C61') }}">

  {# Open Graph meta tags for social media sharing #}

  {# Open Graph meta tags #}
  <meta property="og:title" content="{{ site.title }}{% if subtitle %}: {{ subtitle }}{% endif %}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ site.url }}">
  <meta property="og:description" content="{% if subdescription %}{{ subdescription }}{% else %}{{ site.description }}{% endif %}">
  <meta property="og:image" content="img/meta/og-image.png">

  {# favicons #}
  <link rel="apple-touch-icon" sizes="180x180" href="apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="favicon-16x16.png">
  <link rel="manifest" href="site.webmanifest">

<!--------->
<!-- css -->
<!--------->

  <!-- fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="{{ site.fontsRel }}" rel="stylesheet">

  <!-- icons -->
  <script src="{{ site.iconsRel }}"></script>

  <!-- frameworks -->
  <link rel="stylesheet" type="text/css" href="https://au.goldenharpmedia.com/framework/packages/v1.0/au.css">

  <!-- shared Terrabyte styles -->
  <link rel="stylesheet" href="https://www.terrabyte.eco/css/shared-org-styles.css">
  {# <link rel="stylesheet" href="./css/shared-org-styles.css"> #}

  <!-- shared pixel site styles (if applicable) -->
  {% if site.styleType == "pixel" %}
    <link rel="stylesheet" href="https://www.terrabyte.eco/css/shared-pixel-styles.css">
    {# <link rel="stylesheet" href="./css/shared-pixel-styles.css"> #}
  {% endif %}

  <!-- shared project styles -->
  {# <link rel="stylesheet" href="https://canapi.io/css/shared-styles.css"> #}

  <!-- site styles -->
  <link rel="stylesheet" href="/css/site-styles.css">

  {# other conditional styles #}
  {# {% if testPage %} #}
    {# <link href="/css/test-styles.css" rel="stylesheet" type="text/css" /> #}
  {# {% else %} #}
    {# <link href="/css/other-styles.css" rel="stylesheet" type="text/css" /> #}
  {# {% endif %} #}

<!--------->
<!-- js -->
<!--------->

  <!-- schema -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "{{ site.schemaType | default('Thing') }}",
      "name": "{{ site.project }}",
      "url": "{{ site.url }}",
      "logo": "{{ site.url }}/img/meta/logo.png",
      "description": "{% if subdescription %}{{ subdescription }}{% else %}{{ site.description }}{% endif %}"
    }
    {# {
      "@context": "https://schema.org",
      "@type": "{{ site.schemaType | default('Thing') }}",
      "name": "{{ site.project }}",
      "url": "{{ site.url }}",
      "logo": "{{ site.url }}/img/meta/logo.png",
      "sameAs": ["https://instagram.com/terrabyte_tech", "https://mastodon.eco/@terrabyte", "https://app.wedonthavetime.org/profile/Terrabyte", "https://www.linkedin.com/company/terrabyte-tech/", "https://www.youtube.com/@TerrabyteEco", "https://profiles.eco/terrabyte", "https://github.com/terrabyte-tech", "https://patreon.com/terrabyte_tech"],
      "description": "{% if subdescription %}{{ subdescription }}{% else %}{{ site.description }}{% endif %}"
    } #}
  </script>

  <!-- shared Terrabyte scripts -->
  <script src="https://www.terrabyte.eco/js/shared-scripts.js"></script>

  <!-- site scripts -->
  <script src="/js/scripts.js"></script>

<!--------->
<!-- analytics & APIs -->
<!--------->

  <!-- microanalytics -->
  <script data-host="https://microanalytics.io" data-dnt="false" src="https://microanalytics.io/js/script.js" id="ZwSg9rf6GA" async defer></script>

  <!-- canapi -->
